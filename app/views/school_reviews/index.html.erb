<h1>Listing school_reviews</h1>

<table>
  <tr>
    <th>Rating</th>
    <th>Comments</th>
    <th>School</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @school_reviews.each do |school_review| %>
  <tr>
    <td><%= school_review.rating %></td>
    <td><%= school_review.comments %></td>
    <td><%= school_review.school_id %></td>
    <td><%= link_to 'Show', school_review %></td>
    <td><%= link_to 'Edit', edit_school_review_path(school_review) %></td>
    <td><%= link_to 'Destroy', school_review, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

